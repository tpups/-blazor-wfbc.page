@inherits LayoutComponentBase
@using BlazorPro.BlazorSize
@using WFBC.Shared.Models
@inject AppState AppState
@inject NavigationManager Navigation
@implements IDisposable

<MediaQueryList>

    <MediaQuery Media="@Breakpoints.XSmallDown">
        <Matched>
            <MobileDrawer />
        </Matched>
    </MediaQuery>
    <MediaQuery Media="@Breakpoints.Between(Breakpoints.SmallUp, Breakpoints.MediumDown)">
        <Matched>
            <TabletDrawer />
        </Matched>
    </MediaQuery>

    <div class="drawer-container @AppState.DrawerCssClass @AppState.MobileCssClass">
        <aside class="drawer">
            <div class="drawer-logo">
                <DrawerLogo />
            </div>
            <nav class="nav-menu">
                <ul>
                    <li class="nav-menu-item left-column-item"><NavLink class=@(navSection == "home" ? "active" : "") href="#" @onclick="() => ChangeNavSection(home)">Home</NavLink></li>
                    <li class="nav-menu-item left-column-item"><NavLink class=@(navSection == "results" ? "active" : "") href="/results/2021" @onclick="() => ChangeNavSection(results)">Results</NavLink></li>
                    <li class="nav-menu-item left-column-item"><NavLink class=@(navSection == "rulebook" ? "active" : "") href="/rulebook/2022" @onclick="() => ChangeNavSection(rulebook)">Rulebook</NavLink></li>
                    <li class="nav-menu-item left-column-item"><NavLink href="https://docs.google.com/spreadsheets/d/1aclQnwGfbWnC7pEORc8wiXJ-xcyD9WpINyF-26l0EUg/edit?usp=sharing" target="_blank">Drafts</NavLink></li>
                    <li class="nav-menu-item left-column-item"><NavLink href="https://docs.google.com/spreadsheets/d/1t4w4Mo9HRRAXgy2rzVWhFrWJi1qSTLW3oXPj9VbWUyA/edit?usp=sharing" target="_blank">Picks</NavLink></li>
                    <AuthorizeView Policy="@Policies.IsCommish">
                        <li class="nav-menu-item left-column-item"><NavLink class=@(navSection == "commish" ? "active" : "") href="/commish" @onclick="() => ChangeNavSection(commish)">Commish</NavLink></li>
                    </AuthorizeView>
                </ul>
            </nav>
            <nav class="side-menu @AppState.SideMenuCssClass">
                <CascadingValue Value="navSection" Name="nav-menu-section">
                    <NavMenu />
                </CascadingValue>
            </nav>
        </aside>
        <div class="main-container">
            <MenuBar />
            <div class="main" @onclick="@CloseManagerMenu">
                <div class="content"> 
                    @Body
                </div>
            </div>
        </div>
    </div>
</MediaQueryList>

@code {
    private string navSection = "home";
    private string home = "home";
    private string results = "results";
    private string rulebook = "rulebook";
    private string commish = "commish";
    private void ChangeNavSection(string section)
    {
        navSection = section;
        StateHasChanged();
    }

    public void CloseManagerMenu()
    {
        AppState.SetOpenManagerMenu(close: true);
    }

    protected override void OnInitialized()
    {
        AppState.SetIsLarge(true);
        AppState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        AppState.OnChange -= StateHasChanged;
    }
}
