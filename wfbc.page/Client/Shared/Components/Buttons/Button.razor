@using WFBC.Client.Shared.SVG

<div class="tooltip-wrapper">
    <span>
        @Text
        @if (External == true)
        {
            <ExternalLink />
        }
    </span>
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Text { get; set; }
    [Parameter] public bool External { get; set; }
}