<NavLink @onclick="Click" class=@($"{Background} {TextColor} {Hover} {MaxWidth} mx-2 px-4 py-2 text-center rounded-full") role="@Role" href="@Href" aria-label="@AriaLabel">
    @Text
</NavLink>


@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public Action OnClick { get; set; }

    [Parameter] public string Text { get; set; }
    [Parameter] public string Role { get; set; }
    [Parameter] public string Href { get; set; }
    [Parameter] public string AriaLabel { get; set; }

    //tailwind classes
    [Parameter] public string Background { get; set; }
    [Parameter] public string Hover { get; set; }
    [Parameter] public string TextColor { get; set; }
    [Parameter] public string MaxWidth { get; set;  }



    private void Click()
    {
        OnClick?.Invoke();
    }

    protected override void OnInitialized()
    {
        if (string.IsNullOrWhiteSpace(Background))
            Background = "bg-wfbc-blue-2";
        if (string.IsNullOrWhiteSpace(Hover))
            Hover = "hover:bg-wfbc-blue-1";
        if (string.IsNullOrWhiteSpace(TextColor))
            TextColor = "text-wfbc-white-1";
        if (string.IsNullOrWhiteSpace(MaxWidth))
            MaxWidth = "max-w-fit";
    }
}